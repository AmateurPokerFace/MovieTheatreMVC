@using MovieTheatreMVC.Models.ViewModels.Areas.AdminAreaViewModels.Controllers.MovieControlleViewModels;
@model List<MoviesViewModel>

@if(Model != null && Model.Count > 0)
{
    <div class="row">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var movie in Model)
            { 
                <div class="col">
                    <div class="card h-100">
                            <div class="text-center" style="height: 30rem">
                        <img src="@movie.MovieCoverImagePath" class="card-img-top mh-100" alt="@movie.Title">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">@movie.Title</h4>
                            <p class="card-text">@movie.Description</p>
                            <p class="card-text">Tickets available: @movie.CanPurchaseTickets</p>
                            <p class="card-text">Rated @movie.AgeRestriction</p>
                            <p class="card-text">Run time: @movie.RunTime</p>
                            <p class="card-text">Genre: @movie.GenreName</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">Release date: @movie.ReleaseDate.ToShortDateString()</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}